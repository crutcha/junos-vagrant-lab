system {
    host-name {{ inventory_hostname  }};
    services {
        ssh {
            root-login allow;
        
        }
        netconf {
            ssh;
        
        }
    
    }

}
    interfaces {
        lo0 {
            unit 0 {
                description "peering loopback";
                family inet {
                    address {{ host.loopback.local_ip }}
                }
                family iso  {
                    address {{ host.loopback.iso_net }}
                }
            }
        }
    {% for i in host.interfaces %}
        {{ i.interface  }} {
            unit 0 {
                description "{{ i.description  }}";
                family inet {
                    address {{ i.local_ip  }};
                
                }
                family iso {
                }
                
            }
        }
    {% endfor %}
}
protocols {
    lldp {
        interface all;
    }
    {% if host.isis.enabled == true %}
    isis {
        interface lo0.0;
        {% for i in host.interfaces %}
        interface {{ i.interface }} level 2 disable;
        {% endfor %}
        {% if host.isis.overload == true %}
        overload;
        {% endif %}
    }
    {% endif %}
}
